rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /roles/{email}/{document=**} {
    	allow read: if request.auth != null && request.auth.token.email == email
    }
    match /{collection}/{document=**} {
    	allow read: if request.auth != null && get(/databases/$(database)/documents/roles/$(request.auth.token.email)).data[collection] == "read"
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/roles/$(request.auth.token.email)).data[collection] == "write"
    }
    match /{collection}/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email in get(/databases/$(database)/documents/roles/$(collection)).data.admin
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/roles/$(request.auth.token.email)).data.sys == "admin"
    }
  }
}